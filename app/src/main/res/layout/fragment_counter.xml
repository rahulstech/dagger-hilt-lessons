        tools:text="12"/>
    <Button
        android:id="@+id/increment_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Increment"
        android:layout_marginTop="24dp"
        tools:ignore="HardcodedText"/>

